{
  "compilerOptions": {
    "outDir": "./node_modules/outDir",
    "sourceMap": true,
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "checkJs": false,
    "skipLibCheck": false,
    "noImplicitAny": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "rootDirs": ["src", ".storybook", "scripts"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "types": [
      "node",
      "webpack-env",
      "redux-persist",
      "jest"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
